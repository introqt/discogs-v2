{
    "name": "livedg/live-dg",
    "description": "Discogs integration for WooCommerce",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "woocommerce",
        "discogs",
        "music",
        "vinyl"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "LiveDG\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/ live-dg.php",
        "phpcbf": "phpcbf --standard=WordPress includes/ live-dg.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
